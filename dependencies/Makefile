# -*- makefile -*-

PACKAGES += aerospike
PACKAGES += cassandra
PACKAGES += couchbase
PACKAGES += curl
PACKAGES += hiredis
PACKAGES += hiredis-cluster
PACKAGES += json-c
PACKAGES += memcached
PACKAGES += mongo-c
#PACKAGES += sds
PACKAGES += uv

PWD := $(shell pwd)

all: ${PACKAGES:%=%.all}
clean: ${PACKAGES:%=%.clean}


%.all : out-of-date
	$(MAKE) -j1 -C $(*F) all

%.clean: out-of-date
	$(MAKE) -j1 -C $(*F) clean

.PHONY: all clean out-of-date
